<Defs>
  <!-- ============== beret ================= -->
  <ThingDef ParentName="CP_HatMakeableBase">
    <defName>Apparel_BeretL</defName>
    <label>Lazarus beret</label>
    <description>A beret designed for and used by Lazarus Group soldiers.</description>
    <graphicData>
      <texPath>CP/Apparel/Helmet/Beret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <WoolMuffalo>20</WoolMuffalo>
    </costList>
    <statBases>
      <Mass>0.10</Mass>
      <ArmorRating_Blunt>0.025</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.025</ArmorRating_Sharp>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>CP/Apparel/Helmet/Beret</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33, 0.42, 0.18)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
