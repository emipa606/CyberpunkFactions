<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>Tribe</defName>
    <label>nomad</label>
    <description>Nomads were once corporate wage-slaves, who got fired and blackballed from employment, and now they roam the roads and live in their own villages. As life on the road is hard, they maintain strong family bonds. If a Nomad is in trouble, he can count on members of his family to watch his back.</description>
    <pawnsPlural>nomads</pawnsPlural>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(40, 3)</li>
        <li>(400, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>World/WorldObjects/Expanding/Village</factionIconPath>
    <colorSpectrum>
      <li>(0.4, 0.92, 0.35)</li>
      <li>(0.89, 0.89, 0.7)</li>
      <li>(1, 1, 0.1)</li>
    </colorSpectrum>
    <mustStartOneEnemy>true</mustStartOneEnemy>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <settlementNameMaker>NamerSettlementTribal</settlementNameMaker>
    <techLevel>Industrial</techLevel>
    <backstoryCategories>
      <li>Tribal</li>
    </backstoryCategories>
    <leaderTitle>chief</leaderTitle>
    <allowedCultures>
      <li>Corunan</li>
    </allowedCultures>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
      <li>Caravan_Neolithic_ShamanMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-40</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <fixedLeaderKinds>
      <li>Tribal_ChiefMelee</li>
    </fixedLeaderKinds>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Tribal_Warrior>60</Tribal_Warrior>
          <Tribal_Archer>100</Tribal_Archer>
          <Tribal_ChiefRanged>70</Tribal_ChiefRanged>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Tribal_Trader>1</Tribal_Trader>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
          <Dromedary>1</Dromedary>
        </carriers>
        <guards>
          <Tribal_Warrior>60</Tribal_Warrior>
          <Tribal_Archer>100</Tribal_Archer>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Tribal_Warrior>60</Tribal_Warrior>
          <Tribal_Archer>100</Tribal_Archer>
          <Tribal_ChiefRanged>70</Tribal_ChiefRanged>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
  </FactionDef>
